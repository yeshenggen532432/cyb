<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentLeft="true"
            android:src="@drawable/shop2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray3_s15"
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="宜家家"/>

                <TextView
                    style="@style/tv_cblue_s13"
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_5"
                    android:gravity="right"
                    android:text="详情"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray6_s13"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="进店时间:"/>

                <TextView
                    android:id="@+id/tv_start_time"
                    style="@style/tv_cgray9_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-05-25 19:02:03"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray6_s13"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="离店时间:"/>

                <TextView
                    android:id="@+id/tv_end_time"
                    style="@style/tv_cgray9_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-05-25 19:02:03"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray6_s13"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="在途时长:"/>

                <TextView
                    android:id="@+id/tv_zt_time"
                    style="@style/tv_cgray9_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-05-25 19:02:03"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray6_s13"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="拜访时长:"/>

                <TextView
                    android:id="@+id/tv_visit_time"
                    style="@style/tv_cgray9_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2020-05-25 19:02:03"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    style="@style/tv_cgray6_s13"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="位置:"/>

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/tv_cgray9_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="厦门市"/>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>