<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_10">

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentLeft="true"
                android:src="@drawable/shop2"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_ware_name"
                    style="@style/tv_cgray3_s15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    tools:text="宜家家" />

                <TextView
                    android:id="@+id/tv_house_name"
                    style="@style/tv_cgray3_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:text="临时库位" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_max_num"
                    style="@style/tv_cgray6_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    tools:text="库存数量(小)：47.23件" />

                <TextView
                    android:id="@+id/tv_min_num"
                    style="@style/tv_cgray6_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:text="库存数量(小)：1933.29瓶" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_num"
                    style="@style/tv_cgray6_s13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="大小数量：47件10瓶" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>