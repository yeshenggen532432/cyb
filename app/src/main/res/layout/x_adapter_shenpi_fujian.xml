<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <ImageView
            android:id="@+id/img_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/file_other" />

        <ImageView
            android:id="@+id/img_deleteFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="@drawable/dele_member" />

        
        <TextView
            android:id="@+id/tv_fileNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/img_file"
            android:layout_toLeftOf="@+id/img_deleteFile"
            android:layout_toRightOf="@+id/img_file"
            android:ellipsize="end"
            android:text="文件名"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fileSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_fileNm"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/tv_fileNm"
            android:layout_toRightOf="@+id/img_file"
            android:ellipsize="end"
            android:text="文件大小"
            android:visibility="gone"
            android:textSize="10sp" />
    </RelativeLayout>

</LinearLayout>