<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:orientation="vertical">

    <include layout="@layout/x_layout_head_home"/>
    
    <ImageView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_119"
        android:background="@mipmap/home_banner"
        android:scaleType="fitXY"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_51"
        android:background="@color/white"
        app:tl_textsize="@dimen/sp_14"
        app:tl_iconHeight="@dimen/dp_14"
        app:tl_iconWidth="@dimen/dp_14"
        app:tl_iconGravity="LEFT"
        app:tl_iconMargin="@dimen/dp_10"
        app:tl_indicator_color="@color/x_main_color"
        app:tl_textSelectColor="@color/x_main_color"
        app:tl_textUnselectColor="#B5B5B5"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="@dimen/dp_1"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>