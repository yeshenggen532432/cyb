<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/x_layout_head" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--基本信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="企业名称"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_company_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="所属行业"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/et_industry"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_5"
                        android:hint="点击选择(行业)"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="▼"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>
                    <TextView
                        android:id="@+id/et_category"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:hint="点击选择(行业-分类)"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        android:text="▼"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="经营品牌"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_brand"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible" />
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="负  责  人"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_leader"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="联系电话"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="邮　　箱"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="员工人数"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_employee_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:inputType="number"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="业务总人数"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_salesman_count"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:inputType="number"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="营业执业号"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_13" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/et_bizLicense_number"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13"
                        android:visibility="visible"/>
                </LinearLayout>
                <include layout="@layout/line0_5" />
            </LinearLayout>

            <!--拍照-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/layout_add_pic"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_add_pic"
                        android:layout_width="23dp"
                        android:layout_height="@dimen/dp_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_photo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="营业执业图片"
                        android:textColor="@color/gray_9"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:overScrollMode="never" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>