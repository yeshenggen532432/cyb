<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout
        android:id="@+id/es"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentView="@+id/content"
        app:leftMenuView="@+id/left"
        app:rightMenuView="@+id/right">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_margin="@dimen/dp_10" >

                <ImageView
                    android:id="@+id/img_icon"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/shop2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/img_icon"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_khNm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_5"
                        tools:text="宜家家"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_orderTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        tools:text="下单日期:0000-00-00 00:00"
                        android:textColor="@color/gray_9"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/img_icon"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_orderNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        tools:text="订单号:00000000000"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_icon"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/img_icon"
                    android:drawableLeft="@drawable/icon_dh"
                    android:drawablePadding="@dimen/dp_3"
                    android:singleLine="true"
                    tools:text="00000000000"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_memberNm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/img_icon"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/tv_tel"
                    android:singleLine="true"
                    tools:text="某某某"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#FCFCFC"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10" >

                <LinearLayout
                    android:id="@+id/ll_ddje"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单金额:"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_jine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FF6600"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="元"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数量:"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="#FF6600"
                        android:textSize="@dimen/sp_15" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_orderZt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_6"
                    android:text="状态:审核"
                    android:textColor="#FF6600"
                    android:textSize="@dimen/sp_13"
                    android:visibility="visible" />

                <com.deadline.statebutton.StateButton
                    android:visibility="gone"
                    android:id="@+id/item_sb_zc"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_22"
                    android:padding="0dp"
                    android:text="去收款"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_12"
                    app:radius="@dimen/dp_3"
                    app:normalBackgroundColor="@color/x_main_color"
                    app:pressedBackgroundColor="@color/x_main_color_dirk"/>

            </LinearLayout>
        </LinearLayout>

        <!--侧滑菜单-->
        <LinearLayout
            android:id="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_cancel"
                android:background="@color/red"
                android:layout_width="@dimen/dp_50"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:text="作废" />

        </LinearLayout>

    </com.guanaj.easyswipemenulibrary.EasySwipeMenuLayout>



</LinearLayout>