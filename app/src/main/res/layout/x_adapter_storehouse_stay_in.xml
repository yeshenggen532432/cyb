<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_margin="@dimen/dp_10" >

            <ImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_alignParentLeft="true"
                android:src="@drawable/shop2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    tools:text="宜家家"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    tools:text="日期:0000-00-00 00:00"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_order_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    tools:text="单号:00000000000"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_in_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_icon"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_icon"
                android:drawablePadding="@dimen/dp_3"
                android:singleLine="true"
                tools:text="采购入库"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_icon"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/tv_in_type"
                android:singleLine="true"
                tools:text="某某某"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:background="#FCFCFC"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计金额:"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_total_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="25600"
                    android:textColor="#FF6600"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发票金额:"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_15" />

                <TextView
                    android:id="@+id/tv_dis_amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="25600"
                    android:textColor="#FF6600"
                    android:textSize="@dimen/sp_15" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/dp_6"
                android:paddingLeft="@dimen/dp_20"
                android:paddingRight="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                tools:text="状态:审核"
                android:textColor="#FF6600"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>