<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/map_hint"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_khNm"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_khNm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="客户：" />

        <TextView
            android:id="@+id/tv_wangluo_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="gps" />
    </LinearLayout>

    <include layout="@layout/line1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_shudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_time_yellow"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text=""
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_licheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="单日里程：0公里"
            android:textSize="10sp" />
    </LinearLayout>

    <include layout="@layout/line1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_time_ygfbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_dtt_time"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="0000-00-00 00:00:00"
            android:textSize="15sp" />
    </LinearLayout>

    <include layout="@layout/line1" />

    <LinearLayout
        android:id="@+id/ll_address"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_address_ygfbt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_dtt_address"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:paddingLeft="5dp"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>