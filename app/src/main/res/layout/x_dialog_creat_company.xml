<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical"
        android:padding="1dp"
        
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:textSize="22sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:text="创建公司" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@color/light_gray"
             />

        <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
        />
        <com.xw.repo.XEditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:hint="公司名称"
            android:background="@drawable/green_ling_bg"
            android:ems="10" />

        <EditText
            android:id="@+id/et_maxmember"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:visibility="gone"
            android:background="@drawable/green_ling_bg"
            android:hint="公司规模" />

        <EditText
            android:id="@+id/et_hanye"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:visibility="gone"
            android:background="@drawable/green_ling_bg"
            android:hint="公司所属行业" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/bt_sure"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="40dp"
                android:background="@drawable/select_square_blue"
                android:textColor="@color/white"
                android:text="快速创建" />

            <Button
                android:id="@+id/bt_cancle"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/bt_sure"
                android:background="@drawable/select_square_blue"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:text="取消" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/dark_gray"
            android:gravity="left|top"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:text="快速创建：自动创建默认部门、员工圈、知识库、帖子等" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
             />

    </LinearLayout>

</RelativeLayout>