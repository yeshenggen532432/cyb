<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:background="@color/green" >

        <!-- 返回键 -->
        <ImageView
            android:id="@+id/iv_head_back"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@drawable/back" />

        <!-- 中间文字 -->
        <TextView
            android:id="@+id/tv_head_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="中间"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
        <!-- 右边文字 -->

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_head_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            tools:text="右边"
            android:textColor="@drawable/selector_ziti_head_right"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_head_right2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_head_right"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            tools:text="右边2"
            android:textColor="@drawable/selector_ziti_head_right"
            android:textSize="@dimen/sp_15" />

        <!-- 右边图片 -->
        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_head_right"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:src="@drawable/back"/>

        <!-- 右边图片 -->
        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_head_right2"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_head_right"
            tools:src="@drawable/back"/>
    </RelativeLayout>

</LinearLayout>