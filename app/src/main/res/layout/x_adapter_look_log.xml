<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">

            <TextView
                android:id="@+id/img_memhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_oval_zise_50"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:text="" />
            <TextView
                android:id="@+id/tv_memNm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_memhead"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/img_memhead"
                android:textColor="@color/gray_3"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_memhead"
                android:layout_alignLeft="@+id/tv_memNm"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_13"
                android:text="2016-12-22 10:10:10" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_tpye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="@color/gray_3"
            android:textSize="@dimen/sp_16"
            android:text="日报" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                 >

                <TextView
                    android:id="@+id/tv_gzNr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_14"
                    android:text="本日完成工作:" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp" >
                </TextView>

                <TextView
                    android:id="@+id/edit_gzNr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_gzNr"
                    android:background="@null"
                    android:textColor="@color/gray_9"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                 >

                <TextView
                    android:id="@+id/tv_gzZj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_14"
                    android:text="未完成工作:" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp" >
                </TextView>

                <TextView
                    android:id="@+id/edit_gzZj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_gzZj"
                    android:background="@null"
                    android:textColor="@color/gray_9"
                    android:singleLine="true"
                    android:ellipsize="end"
                     android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                 >

                <TextView
                    android:id="@+id/tv_gzJh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_14"
                    android:text="需调协工作:" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp" >
                </TextView>

                <TextView
                    android:id="@+id/edit_gzJh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_gzJh"
                    android:background="@null"
                    android:textColor="@color/gray_9"
                    android:singleLine="true"
                    android:ellipsize="end"
                     android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_gzBz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_1"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/dp_10"
                 >

                <TextView
                    android:id="@+id/tv_gzBz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/gray_6"
                    android:textSize="@dimen/sp_14"
                    android:text="需调协与帮助:" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp" >
                </TextView>

                <TextView
                    android:id="@+id/edit_gzBz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/tv_gzBz"
                    android:background="@null"
                    android:textColor="@color/gray_9"
                    android:singleLine="true"
                    android:ellipsize="end"
                     android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>