<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/y_layout_head_base"/>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/commonTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        app:tl_textsize="@dimen/sp_14"
        app:tl_indicator_color="@color/x_main_color"
        app:tl_textSelectColor="@color/x_main_color"
        app:tl_textUnselectColor="#B5B5B5"
        app:tl_underline_color="#DDDDDD"
        app:tl_underline_height="@dimen/dp_1"/>

    <FrameLayout
        android:id="@+id/tab_fl_manager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

</LinearLayout>
