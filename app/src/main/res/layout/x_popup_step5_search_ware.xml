<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/shape_bg_yuanjiao"
        android:orientation="vertical" >

        <!--搜索-->
        <RelativeLayout
            android:visibility="visible"
            android:id="@+id/rl_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_5"
            android:background="@color/layout_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_kuang_gray"
                android:gravity="center_vertical"
                android:hint="搜索"
                android:paddingLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_15" >
            </EditText>

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/dp_5"
                android:src="@mipmap/ic_gray_search" >
            </ImageView>
        </RelativeLayout>

        <ListView
            android:id="@+id/listView_search_goods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_400"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:divider="@color/gray_e"
            android:dividerHeight="@dimen/dp_0_5"
             >
        </ListView>

    </LinearLayout>

</LinearLayout>