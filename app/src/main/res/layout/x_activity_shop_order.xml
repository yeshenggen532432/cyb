<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical"  >

    <include layout="@layout/x_layout_head_blue" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:visibility="visible" >

                    <LinearLayout
                        android:id="@+id/ll_khNm"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:visibility="gone" >

                        <RelativeLayout
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="客户:"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_khNm"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="点击选择"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" >
                        </TextView>
                    </LinearLayout>

                    <include layout="@layout/line1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/tv_step5_shr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="收货人:"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/edit_shr"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:ems="10"
                            android:hint="请点击输入"
                            android:textColor="@color/gray_6"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" >
                        </EditText>

                        <ImageView
                            android:id="@+id/img_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/dp_10"
                            android:src="@drawable/icon_jian" />
                    </LinearLayout>

                    <include layout="@layout/line1" />

                    <LinearLayout
                        android:visibility="visible"
                        android:id="@+id/ll_hide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical" >

                            <RelativeLayout
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="电话:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/edit_phone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:ems="10"
                                android:hint="请点击输入"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/sp_15"
                                android:visibility="visible" >
                            </EditText>
                        </LinearLayout>

                        <include layout="@layout/line1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical" >

                            <RelativeLayout
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="地址:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/edit_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@null"
                                android:hint="请选择收货地址"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/sp_15"
                                android:visibility="visible" >
                            </EditText>

                            <ImageView
                                android:id="@+id/iv_address_more"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_10"
                                android:src="@drawable/icon_more"
                                android:visibility="visible"/>
                        </LinearLayout>

                        <include layout="@layout/line1" />
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent" >

                            <TextView
                                android:id="@+id/tv_step5_shtime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="送货时间:"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_shTime"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableRight="@drawable/y_icon_gray_more_right"
                            android:gravity="center_vertical"
                            android:text="点击选择"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" >
                        </TextView>
                        <include layout="@layout/line1" />
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_step5_pszd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="配送指定:"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_pszd"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableRight="@drawable/y_icon_gray_more_right"
                            android:gravity="center_vertical"
                            android:text="公司直送"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" >
                        </TextView>
                        <include layout="@layout/line1" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:gravity="center_vertical" >

                        <RelativeLayout
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="match_parent" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="备注:"
                                android:textColor="@color/gray_3"
                                android:textSize="@dimen/sp_15" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/edit_remo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:ems="10"
                            android:hint="请点击输入"
                            android:textColor="@color/gray_6"
                            android:textSize="@dimen/sp_15"
                            android:visibility="visible" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:gravity="center_vertical" >

                    <!-- 二 -->
                    <TextView
                        android:id="@+id/tv_search_goods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_kuang_blue"
                        android:padding="@dimen/dp_5"
                        android:text="搜索已选商品"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_clear_cache_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_kuang_blue"
                        android:padding="@dimen/dp_5"
                        android:text="清空列表"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                <!-- 添加 -->
                <HorizontalScrollView
                    android:id="@+id/hs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:scrollbars="none" >

                    <LinearLayout
                        android:id="@+id/ll_listView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <View
                            android:id="@+id/line0"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="@color/lineColor"
                            android:visibility="visible" />

                        <include
                            android:id="@+id/head"
                            layout="@layout/x_head_item_supplier_order" />

                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="@color/lineColor"
                            android:visibility="visible" />

                        <com.xmsx.cnlife.widget.ComputeHeightListView
                            android:id="@+id/list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@color/lineColor"
                            android:scrollbars="none"
                            android:dividerHeight="@dimen/dp_0_5" >
                        </com.xmsx.cnlife.widget.ComputeHeightListView>

                        <View
                            android:id="@+id/line"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_0_5"
                            android:background="@color/lineColor"
                            android:visibility="gone" />
                    </LinearLayout>
                </HorizontalScrollView>

                </LinearLayout>

                <!-- 三 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical" >

                        <include layout="@layout/line1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_55"
                            android:gravity="center_vertical" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="商品净收入总额:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                                <EditText
                                    android:id="@+id/edit_zje"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:digits="1234567890."
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/gray_6"
                                    android:textSize="@dimen/sp_15"
                                    android:visibility="visible" >
                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="运费:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                                <EditText
                                    android:id="@+id/edit_freight"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:digits="1234567890."
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/gray_6"
                                    android:textSize="@dimen/sp_15"
                                    android:visibility="visible" >
                                </EditText>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="@dimen/dp_70"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="订单实付:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                                <EditText
                                    android:id="@+id/edit_order_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:ems="10"
                                    android:enabled="false"
                                    android:digits="1234567890."
                                    android:inputType="numberDecimal"
                                    android:textColor="@color/gray_6"
                                    android:textSize="@dimen/sp_15"
                                    android:visibility="visible" >
                                </EditText>
                            </LinearLayout>

                        </LinearLayout>

                        <include layout="@layout/line1" />
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_step5_zdzk"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical" >

                            <RelativeLayout
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="整单折扣:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/edit_zdzk"
                                android:layout_width="@dimen/dp_60"
                                android:layout_height="@dimen/dp_30"
                                android:background="@drawable/shape_kuang_gray"
                                android:ems="10"
                                android:digits="1234567890."
                                android:inputType="numberDecimal"
                                android:padding="@dimen/dp_3"
                                android:singleLine="true"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/sp_13" >
                            </EditText>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="="
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/sp_20" />

                            <EditText
                                android:id="@+id/edit_zdzk_percent"
                                android:layout_width="50dip"
                                android:layout_height="@dimen/dp_30"
                                android:background="@drawable/shape_kuang_gray"
                                android:ems="10"
                                android:gravity="center"
                                android:digits="1234567890."
                                android:inputType="numberDecimal"
                                android:padding="@dimen/dp_3"
                                android:singleLine="true"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/sp_13" >
                            </EditText>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:text="%"
                                android:textColor="@color/gray_9"
                                android:textSize="@dimen/sp_18" />

                            <TextView
                                android:id="@+id/tv_money_convert"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="@dimen/dp_5"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:background="@drawable/shape_kuang_blue"
                                android:padding="@dimen/dp_3"
                                android:text="百分点换算金额"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_10" />

                            <include layout="@layout/line1" />
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_40"
                            android:gravity="center_vertical" >

                            <RelativeLayout
                                android:layout_width="@dimen/dp_80"
                                android:layout_height="match_parent" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:text="成交金额:"
                                    android:textColor="@color/gray_3"
                                    android:textSize="@dimen/sp_15" />
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/edit_cjje"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:ems="10"
                                android:enabled="false"
                                android:digits="1234567890."
                                android:inputType="numberDecimal"
                                android:textColor="@color/gray_6"
                                android:textSize="@dimen/sp_15"
                                android:visibility="visible" >
                            </EditText>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

</LinearLayout>

