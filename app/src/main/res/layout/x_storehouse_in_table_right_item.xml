<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />

    <TextView android:id="@+id/tv_table_content_right_item1"
        style="@style/TextView_Table_Right_40"
        android:text="单位"/>

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />

    <TextView android:id="@+id/tv_table_content_right_item2"
        style="@style/TextView_Table_Right_70"
        android:text="移入库位"/>

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />

    <EditText
        android:id="@+id/tv_table_content_right_item3"
        style="@style/TextView_Table_Right_60"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:background="@null"
        android:hint="点击输入"
        tools:text="移入数量"/>

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />

    <TextView android:id="@+id/tv_table_content_right_item4"
        style="@style/TextView_Table_Right_60"
        android:text="待入仓"/>

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />

    <TextView android:id="@+id/tv_table_content_right_item5"
        style="@style/TextView_Table_Right_40"
        android:textColor="@color/x_main_color"
        tools:text="删除"/>

    <TextView android:id="@+id/tv_table_content_right_item6"
        android:visibility="gone"
        style="@style/TextView_Table_Right_40"
        android:textColor="@color/x_main_color"
        tools:text="复制"/>

    <include
        android:visibility="visible"
        layout="@layout/line1_v_match" />



</LinearLayout>