<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_e"
        android:padding="10dip"
        android:text="1.拜访签到拍照"
        android:textColor="@color/gray_6"
        android:textSize="@dimen/sp_15" />

    <!--图片-->
    <com.lzy.ninegrid.NineGridView
        android:id="@+id/nineGridView_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        app:ngv_gridSpacing="3dp"
        app:ngv_maxSize="9"
        app:ngv_mode="grid"
        app:ngv_singleImageRatio="1"
        app:ngv_singleImageSize="100dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_hbzt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_hbzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_13"
                tools:text="及时更换外观破损，肮脏的海报招贴：11" />

            <include layout="@layout/line1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ggyy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ggyy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_13"
                tools:text="拆除过时的附有旧广告用语的宣传品:22" />

            <include layout="@layout/line1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_isXy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_isXy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_weight="1"
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_13"
                tools:text="检查广告张贴是否显眼:是" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>