<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_35"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/id_tree_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:src="@drawable/ic_arrow_right_gray_24px" />

    <LinearLayout
        android:id="@+id/id_tree_layout_check"
        android:layout_width="@dimen/dp_35"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_tree_check"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:scaleType="fitXY"
            android:src="@mipmap/x_ic_tree_checkbox_uncheck"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_tree_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="青岛小优"
        android:textColor="@color/gray_6"
        android:textSize="15dip" />

</LinearLayout>