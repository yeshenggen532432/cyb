<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/shape_bg_yuanjiao"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="@dimen/dp_250" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_bofang_speed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@drawable/shape_bg_yuanjiao5"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="设置历史回放播放速度"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_bofang_speed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone" >

                <RadioGroup
                    android:id="@+id/rg_bofang_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rb_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="慢"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_yiban"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:checked="true"
                        android:padding="@dimen/dp_5"
                        android:text="一般"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_kuai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="快"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_henkuai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="很快"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />
                </RadioGroup>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:id="@+id/ll_bofang_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:background="@color/light_blue"
                android:gravity="center_vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="请选择回放时段"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_bofang_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <RadioGroup
                    android:id="@+id/rg_bofang_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rb_jintian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="今天"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_zuotian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="昨天"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_qiantian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="前天"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />

                    <RadioButton
                        android:id="@+id/rb_zidingyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:button="@drawable/selector_rb_dtt"
                        android:padding="@dimen/dp_5"
                        android:text="自定义"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_15" />
                </RadioGroup>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_5" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="开始时间:"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_startTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_kuang_gray"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:text="0000-00-00 00:00"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_35" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="结束时间:"
                        android:textColor="@color/gray_3"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/tv_endTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:background="@drawable/shape_kuang_gray"
                        android:gravity="center"
                        android:padding="@dimen/dp_5"
                        android:text="0000-00-00 00:00"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="停留5分钟以上用大点标注"
                    android:textColor="@color/gray_9"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_quxiao"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_30"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/sp_20"
            android:background="@drawable/select_login_btn_blue"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sp_30"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/sp_20"
            android:layout_marginRight="@dimen/dp_5"
             android:background="@drawable/select_login_btn_blue"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13" />

    </LinearLayout>

</LinearLayout>