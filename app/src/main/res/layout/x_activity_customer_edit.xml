<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/y_layout_head_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/layout_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10" 
                android:focusable="true"
                android:focusableInTouchMode="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" 
                    android:focusable="true"
                    android:focusableInTouchMode="true" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="客户:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edit_clientName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15"
                        android:visibility="visible" >
                    </EditText>
                </LinearLayout>

                <include layout="@layout/line1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="联系人:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>

                    <EditText
                        android:id="@+id/edit_LXR"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15"
                        android:visibility="visible" >
                    </EditText>
                </LinearLayout>

                <include layout="@layout/line1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="手机:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>


                    <EditText
                        android:id="@+id/edit_phone"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15"
                        android:phoneNumber="true"
                        android:visibility="visible" >
                    </EditText>
                </LinearLayout>

                <include layout="@layout/line1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="电话:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>


                    <EditText
                        android:id="@+id/edit_tel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:ems="10"
                        android:hint="请点击输入"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15"
                        android:phoneNumber="true"
                        android:visibility="visible" >
                    </EditText>
                </LinearLayout>

                <include layout="@layout/line1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:id="@+id/rl_location"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                         >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="地址:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>
<!-- 		android:text="福建省厦门市思明区望海路福建省厦门市思明区望海路" -->
                    <EditText
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rl_location"
                        android:layout_toLeftOf="@+id/img_location"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text=""
                        android:background="@null"
                        android:hint="请输入地址"
                        android:textColor="@color/gray_6"
                        android:textSize="13sp" />

                    <Button
                        android:id="@+id/img_location"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/select_login_btn_blue"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_10"
                        android:text="标注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/line1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40"
                    android:gravity="center_vertical" >

                    <RelativeLayout
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="经纬度:"
                            android:textColor="@color/gray_3"
                            android:textSize="@dimen/sp_15" />
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/tv_jwd"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:background="@null"
                        tools:text="12.4444,233333"
                        android:textColor="@color/gray_6"
                        android:textSize="@dimen/sp_15" >
                    </TextView>
                </LinearLayout>

            </LinearLayout>


            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                layout="@layout/x_client2" />

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                layout="@layout/x_client3" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>