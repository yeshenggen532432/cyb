<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10" >

        <LinearLayout
            android:id="@+id/ll_QDType"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="客户类型:"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_QDType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_QDType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/y_icon_xl"
                android:visibility="visible" />
        </LinearLayout>

        <include layout="@layout/line1" />

        <LinearLayout
            android:id="@+id/ll_clientGrade"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="客户等级:"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_clientGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_clientGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/y_icon_xl"
                android:visibility="visible" />
        </LinearLayout>

        <include layout="@layout/line1" />

        <LinearLayout
            android:id="@+id/ll_salesStage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="销售阶段:"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_salesStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_salesStage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/y_icon_xl"
                android:visibility="visible" />
        </LinearLayout>

        <include layout="@layout/line1" />

        <LinearLayout
            android:id="@+id/ll_callOnCount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="拜访频数:"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_callOnCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_callOnCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/y_icon_xl"
                android:visibility="visible" />
        </LinearLayout>

        <include layout="@layout/line1" />
        <!-- 合作方式 -->

        <LinearLayout
            android:id="@+id/ll_hzfs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:gravity="center_vertical" >

            <RelativeLayout
                android:layout_width="@dimen/dp_80"
                android:layout_height="match_parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="合作方式 :"
                    android:textColor="@color/gray_3"
                    android:textSize="@dimen/sp_15" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_hzfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/gray_6"
                android:textSize="@dimen/sp_15" />

            <ImageView
                android:id="@+id/img_hzfs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/y_icon_xl"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>