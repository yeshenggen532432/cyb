<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_35"
    android:background="@color/layout_bg"
    android:orientation="horizontal">

    <include layout="@layout/line1_v"/>

    <TextView android:id="@+id/tv_table_title_0"
              style="@style/TextView_Table_title"
        android:textStyle="bold"
        android:text="时间段"/>

    <include layout="@layout/line1_v"/>
    <TextView android:id="@+id/tv_table_title_1"
        style="@style/TextView_Table_title"
        android:textStyle="bold"
        android:text="客户名称"/>

    <include layout="@layout/line1_v"/>
    <TextView android:id="@+id/tv_table_title_2"
        style="@style/TextView_Table_Right_80"
        android:textStyle="bold"
        android:text="完成拜访步骤"/>

    <include layout="@layout/line1_v"/>
    <TextView android:id="@+id/tv_table_title_3"
        style="@style/TextView_Table_Right_60"
        android:textStyle="bold"
        android:text="客户等级"/>
    <include layout="@layout/line1_v"/>



</LinearLayout>