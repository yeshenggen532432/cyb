<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <View
        android:id="@+id/tv_table_content_right_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/gray_b"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <include layout="@layout/line1_v_match"/>

        <TextView
            android:id="@+id/tv_table_content_right_item0"
            style="@style/TextView_Table_Right_60"
            tools:text="业务员"/>

        <include layout="@layout/line1_v_match"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/tv_table_content_right_line2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_marginLeft="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_1"
                android:background="@color/gray_b"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_table_content_right_item1"
                    style="@style/TextView_Table_Right"
                    tools:text="商品名称"/>

                <include layout="@layout/line1_v_match"/>

                <TextView
                    android:id="@+id/tv_table_content_right_item2"
                    style="@style/TextView_Table_Right_60"
                    tools:text="销售类型"/>

                <include layout="@layout/line1_v_match"/>

                <TextView
                    android:id="@+id/tv_table_content_right_item3"
                    style="@style/TextView_Table_Right_60"
                    tools:text="数量"/>

                <include layout="@layout/line1_v_match"/>
                <TextView
                    android:id="@+id/tv_table_content_right_item4"
                    style="@style/TextView_Table_Right_60"
                    tools:text="单价"/>

                <include layout="@layout/line1_v_match"/>
                <TextView
                    android:id="@+id/tv_table_content_right_item5"
                    style="@style/TextView_Table_Right_60"
                    tools:text="金额"/>

            </LinearLayout>

        </LinearLayout>






        <include layout="@layout/line1_v_match"/>

    </LinearLayout>





</LinearLayout>